;
; BIND data file for local loopback interface
;
$TTL	604800
@	IN	SOA	research.net. root.research.net. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
; Name server record
@	IN	NS	ntp-make.research.net.
research.net.	IN	TXT	"Testing"

; A record for the name server
ntp-make	IN	A	192.168.47.101
ntp-make	IN	AAAA	::1
ntp-make	IN	TXT	"I am the BIND9 Server"

; A record for the clients
ntp-client	IN	A	192.168.47.50
ntp-client	IN	TXT	"I am the BIND9 Client"
